                        <div class="detail-item">
                            <label>Disk Space</label>
                            <span>${agent.diskSpaceGb ? agent.diskSpaceGb + ' GB' : '-'}</span>
                        </div>
                    </div>
                </div>
                
                <div class="detail-section">
                    <h4>Capacity & Jobs</h4>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <label>Running Jobs</label>
                            <span>${agent.currentRunningJobs} / ${agent.maxParallelJobs}</span>
                        </div>
                        <div class="detail-item">
                            <label>Agent Version</label>
                            <span>${agent.agentVersion || '-'}</span>
