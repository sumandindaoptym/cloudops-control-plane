    function closeAgentDetailModal() {
        document.getElementById('agentDetailModal').classList.remove('active');
    }

    async function deleteAgent(agentId, agentName) {
        if (!confirm(`Are you sure you want to delete agent "${agentName}"?\n\nThis action cannot be undone.`)) {
            return;
        }
        
        try {
            const response = await fetch(`/api/agents/${agentId}`, { method: 'DELETE' });
            if (!response.ok) throw new Error('Failed to delete agent');
            
            closeAgentDetailModal();
            loadAgents();
        } catch (error) {
            console.error('Error deleting agent:', error);
            alert('Failed to delete agent. Please try again.');
        }
    }

    function updateTargetAgentDropdown() {
        const select = document.getElementById('targetAgent');
        select.innerHTML = '<option value="">Any available agent in pool</option>';
        
        allAgents.forEach(agent => {
            const option = document.createElement('option');
            option.value = agent.id;
            option.textContent = `${agent.name} (${agent.status})`;
            select.appendChild(option);
        });
    }

    function showCreateJobModal() {
        document.getElementById('createJobModal').classList.add('active');
    }

    function closeCreateJobModal() {
        document.getElementById('createJobModal').classList.remove('active');
        document.getElementById('createJobForm').reset();
    }

    async function createJob(event) {
        event.preventDefault();
        
        try {
            const response = await fetch('/api/jobs', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    jobType: document.getElementById('jobType').value,
                    jobName: document.getElementById('jobName').value,
                    description: document.getElementById('jobDescription').value || null,
                    targetAgentId: document.getElementById('targetAgent').value || null,
                    targetPoolId: currentPoolId,
                    priority: parseInt(document.getElementById('jobPriority').value) || 0,
                    parameters: document.getElementById('jobParameters').value || null
                })
            });
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.error || 'Failed to create job');
            }
            
            closeCreateJobModal();
            loadJobs();
        } catch (error) {
            console.error('Error creating job:', error);
            alert('Failed to create job: ' + error.message);
        }
    }

    async function updatePoolSettings(event) {
        event.preventDefault();
        
        try {
            const response = await fetch(`/api/agentpools/${currentPoolId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    name: document.getElementById('editPoolName').value,
                    description: document.getElementById('editPoolDescription').value || null,
                    isHosted: currentPool.isHosted
                })
            });
            
            if (!response.ok) throw new Error('Failed to update pool');
            
            loadPoolDetails();
            alert('Pool settings updated successfully.');
        } catch (error) {
            console.error('Error updating pool:', error);
            alert('Failed to update pool settings. Please try again.');
        }
    }

    async function deleteCurrentPool() {
        if (!confirm(`Are you sure you want to delete pool "${currentPool.name}"?\n\nAgents in this pool will be unassigned but not deleted.`)) {
            return;
        }
        
        try {
            const response = await fetch(`/api/agentpools/${currentPoolId}`, { method: 'DELETE' });
            if (!response.ok) throw new Error('Failed to delete pool');
            
            window.location.href = '/Dashboard/Agents/Pools';
        } catch (error) {
            console.error('Error deleting pool:', error);
            alert('Failed to delete pool. Please try again.');
        }
    }

    function formatTimeAgo(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        const seconds = Math.floor((now - date) / 1000);
        
        if (seconds < 60) return 'just now';
        if (seconds < 3600) return Math.floor(seconds / 60) + 'm ago';
        if (seconds < 86400) return Math.floor(seconds / 3600) + 'h ago';
        return Math.floor(seconds / 86400) + 'd ago';
    }

    function formatDate(dateString) {
        return new Date(dateString).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric'
        });
    }

    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
