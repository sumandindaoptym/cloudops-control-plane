        <h1 id="poolName" class="pool-title">Loading...</h1>
        <p id="poolDescription" class="pool-description"></p>
    </div>
    <div class="pool-actions">
        <button type="button" class="animated-btn" onclick="showAddAgentModal()">
            <div class="icon-container">
                <i class="fas fa-plus icon"></i>
            </div>
            <span class="btn-text">New agent</span>
        </button>
    </div>
</div>

<div class="tabs">
    <button class="tab active" data-tab="agents" onclick="switchTab('agents')">
        <i class="fas fa-server"></i>
        Agents
        <span id="agentCount" class="tab-badge">0</span>
    </button>
    <button class="tab" data-tab="jobs" onclick="switchTab('jobs')">
        <i class="fas fa-tasks"></i>
        Jobs
        <span id="jobCount" class="tab-badge">0</span>
    </button>
    <button class="tab" data-tab="settings" onclick="switchTab('settings')">
        <i class="fas fa-cog"></i>
        Settings
    </button>
</div>

<div id="agentsTab" class="tab-content active">
    <div class="agents-toolbar">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="agentSearch" placeholder="Filter agents..." oninput="filterAgents()">
        </div>
        <div class="filter-labels" id="labelFilters"></div>
    </div>
    
    <div id="agentsList" class="agents-list">
        <div class="loading-state">
            <i class="fas fa-spinner fa-spin"></i>
            <span>Loading agents...</span>
        </div>
    </div>
</div>

<div id="jobsTab" class="tab-content">
    <div class="jobs-toolbar">
        <button type="button" class="animated-btn animated-btn-large" onclick="showCreateJobModal()">
            <div class="icon-container">
                <i class="fas fa-plus icon"></i>
            </div>
            <span class="btn-text">Queue new job</span>
        </button>
    </div>
    
    <div id="jobsList" class="jobs-list">
        <div class="loading-state">
            <i class="fas fa-spinner fa-spin"></i>
            <span>Loading jobs...</span>
        </div>
    </div>
</div>

<div id="settingsTab" class="tab-content">
    <div class="settings-section">
        <h3>Pool Settings</h3>
        <form id="poolSettingsForm" onsubmit="updatePoolSettings(event)">
            <div class="form-group">
                <label for="editPoolName">Pool name</label>
                <input type="text" id="editPoolName" name="name" required maxlength="100">
            </div>
            <div class="form-group">
                <label for="editPoolDescription">Description</label>
                <textarea id="editPoolDescription" name="description" rows="3" maxlength="500"></textarea>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
    
    <div class="settings-section danger-zone">
        <h3>Danger Zone</h3>
        <div class="danger-action">
            <div>
                <strong>Delete this pool</strong>
                <p>Once deleted, the pool cannot be recovered. Agents will be unassigned but not deleted.</p>
            </div>
            <button type="button" class="btn btn-danger" onclick="deleteCurrentPool()">Delete pool</button>
        </div>
    </div>
</div>

<div id="addAgentModal" class="modal">
    <div class="modal-backdrop" onclick="closeAddAgentModal()"></div>
    <div class="modal-content modal-lg">
        <div class="modal-header">
            <h2>Register New Agent</h2>
            <button type="button" class="modal-close" onclick="closeAddAgentModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <form id="addAgentForm" onsubmit="createAgent(event)">
                <div class="form-section">
                    <h4>Agent Information</h4>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="agentName">Agent name <span class="required">*</span></label>
                            <input type="text" id="agentName" name="name" required
                                   placeholder="e.g., agent-prod-01" maxlength="100">
                        </div>
                        <div class="form-group">
                            <label for="maxParallelJobs">Max parallel jobs</label>
                            <input type="number" id="maxParallelJobs" name="maxParallelJobs" 
                                   value="2" min="1" max="10">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="agentDescription">Description</label>
                        <textarea id="agentDescription" name="description" rows="2"
                                  placeholder="Optional description..." maxlength="500"></textarea>
                    </div>
                </div>
                
                <div class="form-section">
                    <h4>Installation</h4>
                    <div class="form-group">
                        <label for="agentType">Agent Type <span class="required">*</span></label>
                        <select id="agentType" name="agentType" required onchange="updateInstallationSteps()">
                            <option value="">Select agent type...</option>
                            <option value="vm">VM (Virtual Machine)</option>
                            <option value="kubernetes">Container (Kubernetes)</option>
                        </select>
                    </div>
                    
                    <div id="installationSteps" class="installation-steps" style="display: none;">
                        <div id="vmSteps" class="install-type-steps" style="display: none;">
                            <div class="step-header">
                                <i class="fas fa-server"></i>
                                <span>VM Installation Steps</span>
                            </div>
                            <div class="download-section">
                                <a href="/downloads/cloudops-agent-linux-x64.tar.gz" class="download-link">
                                    <i class="fas fa-download"></i>
                                    <span>Download Agent (Linux x64)</span>
                                </a>
                                <a href="/downloads/cloudops-agent-windows-x64.zip" class="download-link">
                                    <i class="fas fa-download"></i>
                                    <span>Download Agent (Windows x64)</span>
                                </a>
                            </div>
                            <ol class="steps-list">
                                <li>Download the agent binary for your operating system</li>
                                <li>Extract the archive to your preferred location</li>
                                <li>Run the configuration command with your API key:
                                    <code class="code-block">./cloudops-agent configure --url https://your-api-url --pool <span class="highlight pool-id-placeholder"></span></code>
                                </li>
                                <li>Start the agent service:
                                    <code class="code-block">./cloudops-agent run</code>
                                </li>
                                <li>Or install as a system service:
                                    <code class="code-block">sudo ./cloudops-agent service install && sudo ./cloudops-agent service start</code>
                                </li>
                            </ol>
                        </div>
                        
                        <div id="k8sSteps" class="install-type-steps" style="display: none;">
                            <div class="step-header">
                                <i class="fas fa-dharmachakra"></i>
                                <span>Kubernetes Installation Steps</span>
                            </div>
                            <div class="download-section">
                                <a href="/downloads/cloudops-agent-helm-chart.tgz" class="download-link">
                                    <i class="fas fa-download"></i>
                                    <span>Download Helm Chart</span>
                                </a>
                                <a href="/downloads/cloudops-agent-k8s-manifests.yaml" class="download-link">
                                    <i class="fas fa-download"></i>
                                    <span>Download K8s Manifests</span>
                                </a>
                            </div>
                            <ol class="steps-list">
                                <li>Create a namespace for the agent:
                                    <code class="code-block">kubectl create namespace cloudops-agent</code>
                                </li>
                                <li>Create a secret with your API key:
                                    <code class="code-block">kubectl create secret generic cloudops-agent-secret \
  --from-literal=api-key=YOUR_API_KEY \
  -n cloudops-agent</code>
                                </li>
                                <li>Deploy using Helm:
                                    <code class="code-block">helm install cloudops-agent ./cloudops-agent-helm-chart.tgz \
  --set poolId=<span class="highlight pool-id-placeholder"></span> \
  --set apiUrl=https://your-api-url \
  -n cloudops-agent</code>
                                </li>
                                <li>Or apply the manifests directly:
                                    <code class="code-block">kubectl apply -f cloudops-agent-k8s-manifests.yaml -n cloudops-agent</code>
                                </li>
                                <li>Verify the deployment:
                                    <code class="code-block">kubectl get pods -n cloudops-agent</code>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h4>Labels</h4>
                    <p class="form-hint">Add labels to identify capabilities and filter agents</p>
                    <div id="labelsContainer" class="labels-input-container">
                        <div class="label-input-row">
                            <input type="text" placeholder="Label name" class="label-name">
                            <input type="text" placeholder="Value (optional)" class="label-value">
                            <button type="button" class="btn-icon" onclick="removeLabelRow(this)">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <button type="button" class="btn btn-sm btn-secondary" onclick="addLabelRow()">
                        <i class="fas fa-plus"></i>
                        Add label
                    </button>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeAddAgentModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="createAgentBtn">
                        <span class="btn-text">Register agent</span>
                        <i class="fas fa-spinner fa-spin btn-spinner" style="display: none;"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

