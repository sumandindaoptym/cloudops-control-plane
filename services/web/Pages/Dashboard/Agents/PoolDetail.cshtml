                    </div>
                </div>
                
                ${agent.labels && agent.labels.length > 0 ? `
                    <div class="detail-section">
                        <h4>Labels</h4>
                        <div class="labels-list">
                            ${agent.labels.map(l => `
                                <span class="label-chip">
                                    <span class="label-chip-name">${escapeHtml(l.name)}</span>
                                    ${l.value ? `<span class="label-chip-value">${escapeHtml(l.value)}</span>` : ''}
                                </span>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}
            </div>
            
            <div class="detail-actions">
                <button type="button" class="btn btn-danger" onclick="deleteAgent('${agent.id}', '${escapeHtml(agent.name)}')">
