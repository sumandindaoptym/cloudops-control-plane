                        <div class="detail-item">
                            <label>Last Heartbeat</label>
                            <span>${agent.lastHeartbeat ? formatTimeAgo(agent.lastHeartbeat) : 'Never'}</span>
                        </div>
                        <div class="detail-item">
                            <label>Registered</label>
                            <span>${formatDate(agent.createdAt)}</span>
