<script>
    let currentPoolId = null;
    let currentPool = null;
    let allAgents = [];
    let allJobs = [];

    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        currentPoolId = urlParams.get('id');
        
        if (!currentPoolId) {
            window.location.href = '/Dashboard/Agents/Pools';
            return;
        }
        
        loadPoolDetails();
    });

    async function loadPoolDetails() {
        try {
            const response = await fetch(`/api/agentpools/${currentPoolId}`);
            if (!response.ok) throw new Error('Pool not found');
            
            currentPool = await response.json();
            
            document.getElementById('poolNameBreadcrumb').textContent = currentPool.name;
            document.getElementById('poolName').textContent = currentPool.name;
            document.getElementById('poolDescription').textContent = currentPool.description || '';
            document.getElementById('editPoolName').value = currentPool.name;
            document.getElementById('editPoolDescription').value = currentPool.description || '';
            
            await Promise.all([loadAgents(), loadJobs()]);
        } catch (error) {
            console.error('Error loading pool:', error);
            alert('Failed to load pool details. Redirecting to pools list.');
            window.location.href = '/Dashboard/Agents/Pools';
        }
    }

    async function loadAgents() {
        const container = document.getElementById('agentsList');
        
        try {
            const response = await fetch(`/api/agents?poolId=${currentPoolId}`);
            if (!response.ok) throw new Error('Failed to load agents');
            
            allAgents = await response.json();
            document.getElementById('agentCount').textContent = allAgents.length;
            
            renderAgents(allAgents);
            updateLabelFilters();
            updateTargetAgentDropdown();
        } catch (error) {
            console.error('Error loading agents:', error);
            container.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-exclamation-circle"></i>
                    <h3>Failed to load agents</h3>
                    <p>Please try refreshing the page.</p>
                </div>
            `;
        }
    }

    function renderAgents(agents) {
        const container = document.getElementById('agentsList');
        
        if (agents.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-server"></i>
                    <h3>No agents in this pool</h3>
                    <p>Register your first agent to start running jobs.</p>
                    <button type="button" class="animated-btn animated-btn-large" onclick="showAddAgentModal()">
                        <div class="icon-container">
                            <i class="fas fa-plus icon"></i>
                        </div>
                        <span class="btn-text">Register agent</span>
                    </button>
                </div>
            `;
            return;
        }
        
        container.innerHTML = agents.map(agent => `
            <div class="agent-card" onclick="showAgentDetail('${agent.id}')">
                <div class="agent-card-header">
                    <div class="agent-info">
                        <span class="agent-status-indicator ${agent.status.toLowerCase()}"></span>
                        <span class="agent-name">${escapeHtml(agent.name)}</span>
                    </div>
                    <span class="agent-status-badge ${agent.status.toLowerCase()}">${agent.status}</span>
                </div>
                <div class="agent-card-body">
                    <div class="agent-detail">
                        <span class="agent-detail-label">Hostname</span>
                        <span class="agent-detail-value">${agent.hostName || '-'}</span>
                    </div>
                    <div class="agent-detail">
                        <span class="agent-detail-label">IP Address</span>
                        <span class="agent-detail-value">${agent.ipAddress || '-'}</span>
                    </div>
                    <div class="agent-detail">
                        <span class="agent-detail-label">OS</span>
                        <span class="agent-detail-value">${agent.operatingSystem || '-'}</span>
                    </div>
                    <div class="agent-detail">
                        <span class="agent-detail-label">Capacity</span>
                        <span class="agent-detail-value">${agent.currentRunningJobs} / ${agent.maxParallelJobs} jobs</span>
                    </div>
                    <div class="agent-detail">
                        <span class="agent-detail-label">Last Heartbeat</span>
                        <span class="agent-detail-value">${agent.lastHeartbeat ? formatTimeAgo(agent.lastHeartbeat) : 'Never'}</span>
                    </div>
                </div>
                ${agent.labels && agent.labels.length > 0 ? `
                    <div class="agent-labels">
                        ${agent.labels.map(l => `
                            <span class="agent-label">
                                <span class="agent-label-name">${escapeHtml(l.name)}</span>${l.value ? `: ${escapeHtml(l.value)}` : ''}
                            </span>
                        `).join('')}
                    </div>
                ` : ''}
            </div>
        `).join('');
    }

    function updateLabelFilters() {
        const container = document.getElementById('labelFilters');
        const uniqueLabels = new Map();
        
        allAgents.forEach(agent => {
            if (agent.labels) {
                agent.labels.forEach(label => {
                    uniqueLabels.set(label.name, (uniqueLabels.get(label.name) || 0) + 1);
                });
            }
        });
        
        container.innerHTML = Array.from(uniqueLabels.entries()).map(([name, count]) => `
            <button type="button" class="filter-label" data-label="${escapeHtml(name)}" onclick="toggleLabelFilter(this)">
                ${escapeHtml(name)} (${count})
            </button>
        `).join('');
    }

    function toggleLabelFilter(btn) {
        btn.classList.toggle('active');
        filterAgents();
    }

    function filterAgents() {
        const searchTerm = document.getElementById('agentSearch').value.toLowerCase();
        const activeLabels = Array.from(document.querySelectorAll('.filter-label.active'))
            .map(btn => btn.dataset.label);
        
        const filtered = allAgents.filter(agent => {
            const matchesSearch = agent.name.toLowerCase().includes(searchTerm) ||
                (agent.hostName && agent.hostName.toLowerCase().includes(searchTerm)) ||
                (agent.ipAddress && agent.ipAddress.toLowerCase().includes(searchTerm));
            
            const matchesLabels = activeLabels.length === 0 ||
                (agent.labels && activeLabels.every(label => 
                    agent.labels.some(l => l.name === label)));
            
            return matchesSearch && matchesLabels;
        });
        
        renderAgents(filtered);
    }

    async function loadJobs() {
        try {
            const response = await fetch(`/api/jobs?poolId=${currentPoolId}`);
            if (!response.ok) throw new Error('Failed to load jobs');
            
            allJobs = await response.json();
            document.getElementById('jobCount').textContent = allJobs.length;
            
            renderJobs(allJobs);
        } catch (error) {
            console.error('Error loading jobs:', error);
        }
    }

    function renderJobs(jobs) {
        const container = document.getElementById('jobsList');
        
        if (jobs.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-tasks"></i>
                    <h3>No jobs yet</h3>
                    <p>Queue your first job to run on agents in this pool.</p>
                    <button type="button" class="btn btn-primary" onclick="showCreateJobModal()">
                        <i class="fas fa-plus"></i>
                        Queue job
                    </button>
                </div>
            `;
            return;
        }
        
        container.innerHTML = jobs.map(job => `
            <div class="job-item">
                <div class="job-status-icon ${job.status.toLowerCase()}">
                    <i class="fas ${getJobStatusIcon(job.status)}"></i>
                </div>
                <div class="job-info">
                    <div class="job-name">${escapeHtml(job.jobName)}</div>
                    <div class="job-meta">
                        <span><i class="fas fa-tag"></i> ${job.jobType}</span>
                        <span><i class="fas fa-server"></i> ${job.agentName || 'Unassigned'}</span>
                        <span><i class="fas fa-clock"></i> ${formatTimeAgo(job.createdAt)}</span>
                    </div>
                </div>
                ${job.status === 'Running' ? `
                    <div class="job-progress">
                        <div class="job-progress-bar">
                            <div class="job-progress-fill" style="width: ${job.progress}%"></div>
                        </div>
                    </div>
                ` : ''}
            </div>
        `).join('');
    }

    function getJobStatusIcon(status) {
        switch (status.toLowerCase()) {
            case 'pending': return 'fa-clock';
            case 'running': return 'fa-spinner fa-spin';
            case 'completed': return 'fa-check';
            case 'failed': return 'fa-times';
            case 'cancelled': return 'fa-ban';
            default: return 'fa-question';
        }
    }

    function switchTab(tabName) {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        
        document.querySelector(`.tab[data-tab="${tabName}"]`).classList.add('active');
        document.getElementById(`${tabName}Tab`).classList.add('active');
    }

    function showAddAgentModal() {
        document.getElementById('addAgentModal').classList.add('active');
        document.getElementById('agentName').focus();
    }

    function closeAddAgentModal() {
        document.getElementById('addAgentModal').classList.remove('active');
        document.getElementById('addAgentForm').reset();
        document.getElementById('labelsContainer').innerHTML = `
            <div class="label-input-row">
                <input type="text" placeholder="Label name" class="label-name">
                <input type="text" placeholder="Value (optional)" class="label-value">
                <button type="button" class="btn-icon" onclick="removeLabelRow(this)">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `;
        document.getElementById('installationSteps').style.display = 'none';
        document.getElementById('vmSteps').style.display = 'none';
        document.getElementById('k8sSteps').style.display = 'none';
    }
    
    function updateInstallationSteps() {
        const agentType = document.getElementById('agentType').value;
        const installationSteps = document.getElementById('installationSteps');
        const vmSteps = document.getElementById('vmSteps');
        const k8sSteps = document.getElementById('k8sSteps');
        
        if (!agentType) {
            installationSteps.style.display = 'none';
            return;
        }
        
        installationSteps.style.display = 'block';
        vmSteps.style.display = agentType === 'vm' ? 'block' : 'none';
        k8sSteps.style.display = agentType === 'kubernetes' ? 'block' : 'none';
        
        document.querySelectorAll('.pool-id-placeholder').forEach(el => {
            el.textContent = currentPoolId;
        });
    }

    function addLabelRow() {
        const container = document.getElementById('labelsContainer');
        const row = document.createElement('div');
        row.className = 'label-input-row';
        row.innerHTML = `
            <input type="text" placeholder="Label name" class="label-name">
            <input type="text" placeholder="Value (optional)" class="label-value">
            <button type="button" class="btn-icon" onclick="removeLabelRow(this)">
                <i class="fas fa-times"></i>
            </button>
        `;
        container.appendChild(row);
    }

    function removeLabelRow(btn) {
        const container = document.getElementById('labelsContainer');
        if (container.children.length > 1) {
            btn.closest('.label-input-row').remove();
        }
    }

    async function createAgent(event) {
        event.preventDefault();
        
        const btn = document.getElementById('createAgentBtn');
        btn.disabled = true;
        btn.querySelector('.btn-text').textContent = 'Registering...';
        btn.querySelector('.btn-spinner').style.display = 'inline-block';
        
        const labels = [];
        document.querySelectorAll('.label-input-row').forEach(row => {
            const name = row.querySelector('.label-name').value.trim();
            if (name) {
                labels.push({
                    name: name,
                    value: row.querySelector('.label-value').value.trim() || null
                });
            }
        });
        
        try {
            const response = await fetch('/api/agents', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    name: document.getElementById('agentName').value,
                    description: document.getElementById('agentDescription').value || null,
                    poolId: currentPoolId,
                    maxParallelJobs: parseInt(document.getElementById('maxParallelJobs').value) || 2,
                    agentType: document.getElementById('agentType').value,
                    labels: labels
                })
            });
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.error || 'Failed to register agent');
            }
            
            const agent = await response.json();
            
            closeAddAgentModal();
            
            document.getElementById('agentApiKey').textContent = agent.apiKey;
            document.getElementById('agentApiKeyModal').classList.add('active');
            
            loadAgents();
        } catch (error) {
            console.error('Error creating agent:', error);
            alert('Failed to register agent: ' + error.message);
        } finally {
            btn.disabled = false;
            btn.querySelector('.btn-text').textContent = 'Register agent';
            btn.querySelector('.btn-spinner').style.display = 'none';
        }
    }

    function closeAgentApiKeyModal() {
        document.getElementById('agentApiKeyModal').classList.remove('active');
    }

    function copyApiKey() {
        const apiKey = document.getElementById('agentApiKey').textContent;
        navigator.clipboard.writeText(apiKey).then(() => {
            alert('API key copied to clipboard!');
        });
    }

