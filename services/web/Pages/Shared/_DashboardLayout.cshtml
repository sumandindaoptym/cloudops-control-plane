            <div style="margin-top: auto; padding-top: 1rem; border-top: 1px solid var(--border);">
                <a href="/MicrosoftIdentity/Account/SignOut" class="sidebar-link">
                    <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Sign Out
                </a>
            </div>
        </aside>
        
        <div class="main-content">
            <header class="header">
                <div>
                    <select id="subscriptionSelector" class="select">
                        <option value="">Loading subscriptions...</option>
                    </select>
                </div>
                <div class="user-menu">
                    <span class="user-name">@User.Identity?.Name</span>
                </div>
            </header>
            
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
    </div>
    
    <script>
        (async function() {
            const selector = document.getElementById('subscriptionSelector');
            const savedSubscriptionId = localStorage.getItem('selectedSubscriptionId');
            
            try {
                const response = await fetch('/api/subscriptions');
                
                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    const errorMessage = errorData.error || 'Failed to fetch subscriptions';
                    console.error('Error loading subscriptions:', errorMessage);
                    selector.innerHTML = `<option value="">${errorMessage}</option>`;
                    return;
                }
                
                const subscriptions = await response.json();
                
                selector.innerHTML = '';
                
                if (subscriptions.length === 0) {
                    selector.innerHTML = '<option value="">No Azure subscriptions found</option>';
                    return;
                }
                
                subscriptions.forEach(sub => {
                    const option = document.createElement('option');
                    option.value = sub.subscriptionId;
                    option.textContent = sub.displayName;
                    
                    if (sub.state !== 'Enabled') {
                        option.disabled = true;
                    }
                    
                    if (savedSubscriptionId === sub.subscriptionId) {
                        option.selected = true;
                    }
                    
                    selector.appendChild(option);
                });
                
                if (!savedSubscriptionId && subscriptions.length > 0) {
                    selector.value = subscriptions[0].subscriptionId;
                    localStorage.setItem('selectedSubscriptionId', subscriptions[0].subscriptionId);
                }
                
                selector.addEventListener('change', function() {
                    localStorage.setItem('selectedSubscriptionId', this.value);
                    // Dispatch custom event to notify other components on the same page
                    window.dispatchEvent(new CustomEvent('subscriptionChanged', { 
                        detail: { subscriptionId: this.value } 
                    }));
                });
                
            } catch (error) {
                console.error('Error loading subscriptions:', error);
                selector.innerHTML = '<option value="">Unable to load subscriptions</option>';
            }
        })();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
